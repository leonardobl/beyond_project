<!-- TODOS OS PROFISSIONAIS -->
<section>
  
  <h1 class="text-center h2">Nossos Profissionais</h1>
  
  <% if(categorias.length > 0) { %>

        <div class="d-flex justify-content-center my-4">
          <div id="filters" class="btn-group mr-2" role="group" aria-label="First group">
            <button class="btn btn-primary btn_roxo" data-filter="*">Todos</button>

            <% categorias.forEach( categoria => { %>
              <button class="btn btn-primary btn_roxo" data-filter=".<%= categoria.nome %>"><%= categoria.nome %></button>
            <% } ) %>
          </div>
        </div>

  <% } %>
  
<% if(profissionais.length >0){ %> 


          <div class="container">
            <div class="grid">
              <div class="row">

            <% profissionais.forEach( prof => { %>
              
                
                <!-- INICIO CARD PROFISSIONAL    -->
                <div class="col-lg-3 col-md-6 col-12 my-2 element-item <%= prof.categoria.nome %>">
                  <div class="class-thumb">
                    <img src="img/uploads/<%= prof.filename %>" class="img-fluid" alt="Class" >
                    <div class="class-info">
                      <h3 class="mb-1"><%= prof.nome.split(" ")[0] + " " + prof.nome.split(" ")[ prof.nome.split(" ").length - 1 ] %></h3>
                      <p>
                        <strong ><%= prof.especialidade %></strong> <br>
                        <strong><%= prof.sigla %> - </strong>
                        <%= prof.num_cr %>
                      </p>
                      <button class="btn-beyon" data-toggle="modal" data-target="#prof<%= prof.id %>">Saiba mais</button>
                    </div>
                  </div>
                </div>
                <!-- FIM CARD PROFISSIONAL -->
                <!-- INICIO MODAL -->
                <div class="modal fade" id="prof<%= prof.id %>" tabindex="-1" role="dialog">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title cor_padrao"><%= prof.nome %></h5>
                        
                        <button type="button" class="close" data-dismiss="modal">
                          <span>&times;</span>
                        </button>
                      </div>
                      <div class="modal-body mt-2">
                        <img src="img/uploads/<%= prof.filename %>" class="img-fluid" alt="Class">
                        <p class="mt-3">
                          <%= prof.descricao %>
                        </p>
                      </div>
                      <div class="modal-footer mt-3">
                        <button type="button" class="btn btn-beyon" data-dismiss="modal">Fechar</button>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- FIM MODAL -->
            <% } ) %>   

          </div>
        </div>
      </div> 

          <!-- FIM DOS PROFISSIONAIS -->




  <% } %>    
  
  
  
  
  
  
